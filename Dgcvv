const fs = require("fs");
const ping = require("ping");

// Routes
app.use("/api/regions", regionRoutes);

// Device Status Tracking
const devices = fetchAllIpAddress();
let deviceStatus = {};
let uptimeTracker = {};
let downtimeTracker = {};

const logFile = "./deviceLogs.json";

// Load previous logs if they exist
let deviceLogs = fs.existsSync(logFile) ? JSON.parse(fs.readFileSync(logFile, "utf8")) : {};

// Function to log device status changes and track uptime/downtime
function logDeviceChange(ip, newStatus) {
    const timestamp = new Date().toISOString();

    if (!deviceLogs[ip]) {
        deviceLogs[ip] = [];
    }

    const lastLog = deviceLogs[ip].length ? deviceLogs[ip][deviceLogs[ip].length - 1] : null;

    // If status changed, create a new log entry and reset timers
    if (!lastLog || lastLog.status !== newStatus) {
        deviceLogs[ip].push({ status: newStatus, timestamp });

        // Reset respective counters on status change
        if (newStatus === "Online") {
            uptimeTracker[ip] = 0;  // Reset uptime tracker when transitioning from Offline → Online
        } else {
            downtimeTracker[ip] = 0; // Reset downtime tracker when transitioning from Online → Offline
        }

        // Save updated log to file
        fs.writeFileSync(logFile, JSON.stringify(deviceLogs, null, 2));
        console.log(`Device ${ip} changed status to ${newStatus} at ${timestamp}`);
    }
}

// Function to update uptime and downtime for devices
function updateUptimeDowntime() {
    for (const ip of devices) {
        if (deviceStatus[ip] === "Online") {
            uptimeTracker[ip] = (uptimeTracker[ip] || 0) + 1;  // Increase uptime if device remains online
        } else if (deviceStatus[ip] === "Offline") {
            downtimeTracker[ip] = (downtimeTracker[ip] || 0) + 1;  // Increase downtime if device remains offline
        }
    }
}

// Ping all devices and log changes
async function pingDevices() {
    for (const ip of devices) {
        try {
            const result = await ping.promise.probe(ip);
            const newStatus = result.alive ? "Online" : "Offline";

            // Log only if status has changed
            if (!deviceStatus[ip] || deviceStatus[ip] !== newStatus) {
                logDeviceChange(ip, newStatus);
            }

            // Update current device status
            deviceStatus[ip] = newStatus;
        } catch (error) {
            console.error(`Error pinging ${ip}:`, error);
            deviceStatus[ip] = "Offline";
        }
    }
    console.log("Updated device statuses:", deviceStatus);
}

// Call `pingDevices` function every minute and update uptime/downtime every minute
setInterval(pingDevices, 60000); // Ping devices every 1 minute
setInterval(updateUptimeDowntime, 60000); // Update uptime/downtime counters every 1 minute
