// Fetching the device downtime-uptime data from the API
fetch('http://localhost/api/devices/downtime-uptime')
    .then(response => response.json())
    .then(data => {
        // Get the container element where the device cards will be inserted
        const devicesContainer = document.getElementById('devices');

        // Loop through the data and create a card for each device
        for (const deviceIp in data) {
            const deviceData = data[deviceIp];
            
            // Create the device card element
            const deviceCard = document.createElement('div');
            deviceCard.className = 'device-card';
            
            // Device IP
            const deviceTitle = document.createElement('h3');
            deviceTitle.textContent = deviceIp;
            deviceCard.appendChild(deviceTitle);
            
            // Uptime & Downtime Summary
            const summary = document.createElement('div');
            summary.className = 'summary';
            summary.innerHTML = `
                <div>Uptime: ${deviceData.daily.uptime}%</div>
                <div>Downtime: ${deviceData.daily.downtime}%</div>
            `;
            deviceCard.appendChild(summary);
            
            // Detailed data for daily, weekly, and monthly
            const details = document.createElement('div');
            details.className = 'details';
            details.innerHTML = `
                <h4>Details:</h4>
                <p><strong>Daily:</strong> Uptime: ${deviceData.daily.uptime}%, Downtime: ${deviceData.daily.downtime}%</p>
                <p><strong>Weekly:</strong> Uptime: ${deviceData.weekly.uptime}%, Downtime: ${deviceData.weekly.downtime}%</p>
                <p><strong>Monthly:</strong> Uptime: ${deviceData.monthly.uptime}%, Downtime: ${deviceData.monthly.downtime}%</p>
            `;
            deviceCard.appendChild(details);
            
            // Append the card to the devices container
            devicesContainer.appendChild(deviceCard);
        }
    })
    .catch(error => console.error('Error fetching data:', error));




